page{
  background-color: #EBEEF5;
}

.user{
  padding-top: 40rpx;
  height: 350rpx;
  display: flex;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.user-img{
  width: 150rpx;
  height: 150rpx;
  background-size: cover;
  background-position: center;
}
.round{
  border-radius: 500rpx;
}

.login button{
  border-radius: 4px;
  font-weight: 700;
  font-size: 17px;
  background-color: #ff3434;
  color: #fff;
}
.func-list{
width: 750rpx;
background-color: #fff;

}
.func-list-item{
  padding-top: 20rpx;
  width: 750rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;

}
.func-list-item-text{
  line-height: 100rpx; 
  margin-left: 10rpx;
  font-weight: 500;
  color: #303133;
}
.func-list-item-image{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100rpx;
}
.func-list-item-split{
  line-height:100rpx;
  font-size:x-large;
  color:#909399;
  margin-right: 30rpx;
}

.line{
  display: block;
  content: '';
  width: 750rpx;
  height: 1px;
  background-color: #DCDFE6;
  width: 750rpx;
  margin-top: 5rpx;
}